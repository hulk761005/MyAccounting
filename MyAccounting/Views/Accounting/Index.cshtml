@model IEnumerable<MyAccounting.Models.AccountingViewModels>

@{
    ViewBag.Title = "Index";
}

<div class="container">

    <h2>記帳簿</h2>

    <div>
        <div class="item">
            <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("Create", "Accounting")'">新增</button>
        </div>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>
        </thead>
        <tbody>
            @{
                var count = 0;
                foreach (var item in Model)
                {
                    <tr>
                        <td>@(++count)</td>
                        <td>@item.Type</td>
                        <td>@item.date.ToString("yyyy-MM-dd")</td>
                        <td>@item.price.ToString("#,###")</td>
                    </tr>

                }
            }

        </tbody>
    </table>
</div>

